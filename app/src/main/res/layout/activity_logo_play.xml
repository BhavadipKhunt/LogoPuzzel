<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".logo_play_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight=".9">
        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:id="@+id/play_image_view"
            ></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/liner_layout"
        android:layout_weight="1.1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1.2">
        <Button
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_35sdp"
            android:text="Hint"
            android:textSize="@dimen/_15sdp"
            android:background="@drawable/hint"
            android:id="@+id/hint_button"
            app:backgroundTint="@null"></Button>
        <Button
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/baseline_cancel_24"
            app:backgroundTint="@null"
            android:id="@+id/clear_all_button"
            android:layout_marginLeft="@dimen/_10sdp"></Button>
        <Button
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/baseline_arrow_back_24"
            app:backgroundTint="@null"
            android:id="@+id/cancle_button"
            android:layout_marginLeft="@dimen/_10sdp"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight=".8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_7sdp"
            android:layout_weight=".9">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#817E7E"
                android:id="@+id/btn0"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#817E7E"
                android:id="@+id/btn1"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#817E7E"
                android:id="@+id/btn2"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#817E7E"
                android:id="@+id/btn3"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn4"
                android:backgroundTint="#817E7E"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn5"
                android:backgroundTint="#817E7E"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn6"
                android:backgroundTint="#817E7E"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".9"
            android:layout_marginHorizontal="@dimen/_7sdp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn7"
                android:backgroundTint="#817E7E"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn8"
                android:backgroundTint="#817E7E"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn9"
                android:backgroundTint="#817E7E"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn10"
                android:backgroundTint="#817E7E"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn11"
                android:backgroundTint="#817E7E"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#817E7E"
                android:id="@+id/btn12"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn13"
                android:backgroundTint="#817E7E"
                android:layout_marginLeft="@dimen/_1sdp"
                ></Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight=".5"></LinearLayout>

    </LinearLayout>

</LinearLayout>